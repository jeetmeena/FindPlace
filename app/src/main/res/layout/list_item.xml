<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gremnnaf"
    >



        <ImageView
            android:id="@+id/images"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@drawable/toilet"
            android:layout_margin="10dp"
            />

    <ImageView
        android:id="@+id/imagesstar"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="28dp"
        android:background="@drawable/starimage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp" />
    <TextView
        android:id="@+id/name_tt"
        android:layout_width="141dp"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/namead"
        android:layout_alignStart="@+id/namead"
        android:layout_alignTop="@+id/images"
        android:layout_marginLeft="90dp"

        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/namead"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView3"
        android:text="Name"
        android:layout_toLeftOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/images"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="108dp"

        android:text="Cost"
        android:layout_alignParentRight="true"
        android:layout_marginRight="108dp" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/images"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/images"
        android:layout_alignStart="@+id/name_tt"
        android:text="City"
        android:layout_marginLeft="20dp"
     android:layout_marginRight="5dp"
        android:layout_alignLeft="@+id/name_tt" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/images"
        android:layout_toEndOf="@+id/textView5"
        android:paddingLeft="5dp"
        android:text="TextView"
        android:layout_toRightOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="68dp"
        android:text="5.0"
         android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="68dp" />


</RelativeLayout>